{
  "dataset": "MNIST",
  "model": "SimpleMLP",
  "seed": 1,
  "batch_size": 128,
  "sweeps": [
    {
      "optimizer": "AdamW",
      "lr_values": [1e-1, 1e-2, 1e-3, 1e-4],
      "epochs": 3,
      "weight_decay_values": [0.0, 1e-4, 5e-4]
    },
    {
      "optimizer": "SGD_Momentum",
      "lr_values": [0.1, 0.05, 0.01, 0.001],
      "epochs": 3,
      "momentum_values": [0.0, 0.5, 0.9]
    }
  ],
  "final": {
    "epochs": 20,
    "capture_layer_grad_epochs": [1, 10, 20]
  },
  "convergence": {
    "grad_norm_threshold": 1e-6,
    "loss_delta_threshold": 1e-7,
    "loss_window": 200
  }
}
